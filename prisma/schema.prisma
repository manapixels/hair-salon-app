// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CUSTOMER
  ADMIN
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  NO_SHOW
}

enum RetentionMessageType {
  FEEDBACK_REQUEST
  REBOOKING_NUDGE
  WIN_BACK
}

model User {
  id            String  @id @default(cuid())
  name          String
  email         String  @unique
  password      String?
  role          Role    @default(CUSTOMER)
  authProvider  String?
  telegramId    Int?    @unique
  whatsappPhone String? @unique
  avatar        String?

  // Retention tracking
  lastVisitDate            DateTime?
  totalVisits              Int       @default(0)
  lastRetentionMessageSent DateTime?

  appointments      Appointment[]
  feedback          Feedback[]
  retentionMessages RetentionMessage[]
  loginTokens       LoginToken[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([whatsappPhone])
  @@map("users")
}

model ServiceCategory {
  id            String    @id @default(cuid())
  title         String
  description   String?   // e.g., "Professional cuts and styling"
  icon          String?   // Icon name reference
  priceRangeMin Int?      // Category price range minimum
  priceRangeMax Int?      // Category price range maximum
  sortOrder     Int       @default(0) // Control category display order
  items         Service[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("service_categories")
}

model Service {
  id              String          @id @default(cuid())
  name            String
  subtitle        String?         // Short tagline (e.g., "Classic cut with styling")
  description     String?         // Full description
  price           String          // Display price (e.g. "$80-100" or "From $70")
  basePrice       Int             // Numeric base price for calculations
  maxPrice        Int?            // Maximum price for variable pricing
  duration        Int             // in minutes
  imageUrl        String?         // Service photo URL
  popularityScore Int             @default(0) // For "Popular" badges
  tags            String[]        @default([]) // e.g., ["quick", "budget", "premium"]
  categoryId      String
  category        ServiceCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  addons          ServiceAddon[]
  isActive        Boolean         @default(true)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@map("services")
}

model ServiceAddon {
  id            String   @id @default(cuid())
  name          String
  description   String?  // Explain what this add-on includes
  benefits      String[] @default([]) // e.g., ["Longer-lasting style", "Adds volume"]
  price         String   // Display price (e.g., "+$5")
  basePrice     Int      // Numeric price
  duration      Int      @default(0) // Additional time in minutes
  isRecommended Boolean  @default(false) // Show "Recommended" badge
  isPopular     Boolean  @default(false) // Show popularity stats
  serviceId     String
  service       Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("service_addons")
}

model Stylist {
  id           String       @id @default(cuid())
  name         String
  email        String       @unique
  bio          String?
  avatar       String?
  specialties  Json         // Array of service IDs this stylist can perform
  workingHours Json         // Working hours for each day of week
  blockedDates Json         @default("[]") // Array of date strings in YY-YY-MM-DD format for breaks/holidays
  isActive     Boolean      @default(true)
  appointments Appointment[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@map("stylists")
}

model Appointment {
  id              String   @id @default(cuid())
  date            DateTime
  time            String
  services        Json     // Array of services
  stylistId       String?  // The assigned stylist
  stylist         Stylist? @relation(fields: [stylistId], references: [id], onDelete: SetNull)
  customerName    String
  customerEmail   String
  totalPrice      Int
  totalDuration   Int
  calendarEventId String?  // Google Calendar event ID
  userId          String?
  user            User?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  // Status tracking
  status       AppointmentStatus @default(SCHEDULED)
  completedAt  DateTime?
  feedbackSent Boolean           @default(false)

  feedback  Feedback?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("appointments")
}

model KnowledgeBase {
  id        String   @id @default(cuid())
  question  String
  answer    String   @db.Text
  tags      String[]
  embedding Json?    // Vector embedding (stored as JSON array)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([question])
  @@map("knowledge_base")
}

model LoginToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
}

model AdminSettings {
  id           Int      @id @default(autoincrement())
  
  // Weekly Schedule - JSON structure: { "monday": { "isOpen": true, "openingTime": "11:00", "closingTime": "19:00" }, ... }
  weeklySchedule Json   @default("{\"monday\":{\"isOpen\":true,\"openingTime\":\"11:00\",\"closingTime\":\"19:00\"},\"tuesday\":{\"isOpen\":false,\"openingTime\":\"11:00\",\"closingTime\":\"19:00\"},\"wednesday\":{\"isOpen\":true,\"openingTime\":\"11:00\",\"closingTime\":\"19:00\"},\"thursday\":{\"isOpen\":true,\"openingTime\":\"11:00\",\"closingTime\":\"19:00\"},\"friday\":{\"isOpen\":true,\"openingTime\":\"11:00\",\"closingTime\":\"19:00\"},\"saturday\":{\"isOpen\":true,\"openingTime\":\"11:00\",\"closingTime\":\"19:00\"},\"sunday\":{\"isOpen\":true,\"openingTime\":\"11:00\",\"closingTime\":\"19:00\"}}")
  
  // Closed Dates - Array of date strings in YYYY-MM-DD format for special closures
  closedDates  Json   @default("[]")
  
  // Time blocking for specific slots (legacy/additional blocking)
  blockedSlots Json   @default("{}")
  
  // Business Information
  businessName    String   @default("Signature Trims Hair Salon")
  businessAddress String   @default("123 Main St, Your City, ST 12345")
  businessPhone   String   @default("(555) 123-4567")
  
  updatedAt    DateTime @updatedAt

  @@map("admin_settings")
}

model Feedback {
  id            String      @id @default(cuid())
  appointmentId String      @unique
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating        Int         // 1-5 stars
  comment       String?
  createdAt     DateTime    @default(now())

  @@map("feedback")
}

model RetentionMessage {
  id                 String                 @id @default(cuid())
  userId             String
  user               User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  messageType        RetentionMessageType
  daysSinceLastVisit Int
  sentAt             DateTime               @default(now())
  deliveryStatus     String                 @default("PENDING") // SENT/FAILED/REPLIED
  deliveryError      String?

  @@map("retention_messages")
}

model FlaggedConversation {
  id          String    @id @default(cuid())
  userId      String    // Platform ID (phone number for WhatsApp, chat ID for Telegram)
  platform    String    // 'whatsapp' | 'telegram'
  reason      String
  lastMessage String    @db.Text
  flaggedAt   DateTime  @default(now())
  resolvedAt  DateTime?
  isResolved  Boolean   @default(false)
  resolvedBy  String?   // Admin who resolved it

  @@index([userId, isResolved])
  @@index([isResolved, flaggedAt])
  @@map("flagged_conversations")
}
